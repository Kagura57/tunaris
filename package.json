{
  "name": "kwizik",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "db:migrate": "cd apps/api && bun run db:migrate",
    "docker:up": "docker compose up -d postgres redis",
    "docker:down": "docker compose down",
    "changelog:add": "bun scripts/changelog-add.ts",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "test": "bun test apps/api/tests packages/shared/src apps/web/src/routes",
    "test:e2e": "bash ./scripts/playwright.sh test",
    "test:e2e:list": "bash ./scripts/playwright.sh test --list"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
